# Portfolio Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3001
NODE_ENV=development

# Email Configuration for Contact Form
# IMPORTANT: For Gmail, use an App Password, not your regular password
# 1. Enable 2-factor authentication on your Gmail account
# 2. Go to Google Account → Security → 2-Step Verification → App passwords
# 3. Generate an app password for "Mail"
# 4. Use that password below

EMAIL_USER=mailbroo
EMAIL_PASS=sharppppp

# Alternative Email Services (uncomment and configure as needed):

# For Outlook/Hotmail:
# EMAIL_SERVICE=hotmail
# EMAIL_USER=your-email@outlook.com
# EMAIL_PASS=your-password

# For Yahoo:
# EMAIL_SERVICE=yahoo
# EMAIL_USER=your-email@yahoo.com
# EMAIL_PASS=your-password

# For custom SMTP server:
# EMAIL_HOST=smtp.yourdomain.com
# EMAIL_PORT=587
# EMAIL_SECURE=false
# EMAIL_USER=your-email@yourdomain.com
# EMAIL_PASS=your-password

# Supabase configuration (optional but recommended for production)
# Create a table named `projects` with appropriate columns (id, title, description, image, technologies, github, live, etc.)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=public-anon-key
# REQUIRED for server-side writes and admin operations
SUPABASE_SERVICE_ROLE_KEY=service-role-key

# Admin credentials (fallback if you don't use Supabase Auth)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
# Optionally set a persistent ADMIN_TOKEN to secure admin endpoints
ADMIN_TOKEN=replace_with_strong_token
